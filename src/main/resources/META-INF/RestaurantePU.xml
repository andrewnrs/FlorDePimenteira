<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/restaurante</property>
    <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
      <mapping class="anresdev.restaurante.api.model.Categoria"/>
      <mapping class="anresdev.restaurante.api.model.ItemCardapio"/>
      <mapping class="anresdev.restaurante.api.model.ItemPedido"/>
      <mapping class="anresdev.restaurante.api.model.Pedido"/>
      <mapping class="anresdev.restaurante.api.model2.Categoria"/>
      <mapping class="anresdev.restaurante.api.model2.ItemCardapio"/>
      <mapping class="anresdev.restaurante.api.model2.ItemPedido"/>
      <mapping class="anresdev.restaurante.api.model2.Pedido"/>
      <mapping class="anresdev.restaurante.api.model2.ItensVendidosHoje"/>
      <mapping class="anresdev.restaurante.api.model2.ValorTotalDoPedido"/>
      <mapping class="anresdev.restaurante.api.model2.ValorTotalPorItemDoPedido"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>